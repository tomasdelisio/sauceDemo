package utils;

public enum Messages {
	/*** MESSAGES ***/
	// Test
	TEST_START("INICIANDO PRUEBA"),
	TEST_FINISH("FINALIZANDO PRUEBA"),
	TEST_OK("PREUBA EXITOSA"),
	
	// Data
	USR_COMPLETED("USUARIO INGRESADO Y ALMACENADO"),
	PASS_COMPLETED("CONTRASEÑA INGRESADA Y ALMACENADA"),
	PRODUCTS_TXT_SAVED("TEXTO PRODUCTS ALMACENADO"),
	USR_MATCH("EL CAMPO DE NOMBRE DE USUARIO COINCIDE CON EL VALOR ESPERADO"),
	PASS_MATCH("EL CAMPO CONTRASEÑA DE USUARIO COINCIDE CON EL VALOR ESPERADO"),
	PRODUCTS_TXT_VISIBLE("EL TEXTO PRODUCTS ES VISIBLE"),
	REMOVE_TXT_VISIBLE("EL TEXTO REMOVE ES VISIBLE"),
	REMOVE_TXT_NOT_VISIBLE("EL TEXTO REMOVE NO ES VISIBLE"),
	
	// Error
	USR_MISMATCH("EL CAMPO DE NOMBRE DE USUARIO NO COINCIDE CON EL VALOR ESPERADO"),
	PASS_MISMATCH("EL CAMPO CONTRASEÑA DE USUARIO NO COINCIDE CON EL VALOR ESPERADO"),
	ALERT_TXT_MISMATCH("EL TEXTO DE LA ALERTA NO COINCIDE CON EL VALOR ESPERADO"),
	PRODUCTS_TXT_NOT_VISIBLE("EL TEXTO PRODUCTS NO ES VISIBLE"),
	HANDLE_ASSERTION_ERROR("CONTROLANDO EXCEPCIONES"),
	TEST_ERROR("PRUEBA FALLIDA"),
	LOGIN_BTN_NOT_VISIBLE("EL BOTÓN DE LOGIN NO ES VISIBLE"),
	
	// Login
	LOGIN("INICIANDO LOGIN"),
	LOGIN_COMPLETED("LOGIN COMPLETADO"),
	VALIDATE_LOGIN("VALIDANDO LOGIN"),
	LOGIN_BTN_SAVED("BOTÓN DE LOGIN ALMACENADO"),
	LOGIN_BTN_VISIBLE("EL BOTÓN DE LOGIN ES VISIBLE"),
	LOGIN_OK("LOGIN EXITOSO"),
	
	// Cart
	CART("INICIANDO CARRITO"),
	CART_COMPLETED("CARRITO COMPLETADO"),
	VALIDATE_CART("VALIDANDO CARRITO"),
	CART_OK("CARRITO EXITOSO");
	
	
	/*** VARIABLES ***/
	private final String message;
	
	/*** METHODS ***/
	// Setter
	Messages(String message){
		this.message = message;
		
	}
	
	// Getter
	public String getMessage() {
		return message;
		
	}
}
