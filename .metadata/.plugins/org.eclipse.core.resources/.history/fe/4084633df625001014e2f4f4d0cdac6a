package utils;

public enum Messages {
	/*** MESSAGES ***/
	// Test
	TEST_START("INICIANDO PRUEBA"),
	TEST_FINISH("FINALIZANDO PRUEBA"),
	TEST_OK("PREUBA EXITOSA"),
	
	// Data
	USR_COMPLETED("USUARIO INGRESADO Y ALMACENADO"),
	PASS_COMPLETED("CONTRASEÑA INGRESADA Y ALMACENADA"),
	PRODUCTS_TXT_SAVED("TEXTO 'PRODUCTOS' ALMACENADO"),
	USR_MATCH("EL NOMBRE DE USUARIO COINCIDE CON EL VALOR ESPERADO"),
	PASS_MATCH("LA CONTRASEÑA COINCIDE CON EL VALOR ESPERADO"),
	PRODUCTS_TXT_VISIBLE("EL TEXTO 'PRODUCTOS' ES VISIBLE"),
	REMOVE_BTN_VISIBLE("EL BOTÓN 'REMOVER' ES VISIBLE"),
	PRODUCT_NAME_MATCH("EL NOMBRE DEL PRODUCTO COINCIDE CON EL VALOR ESPERADO"),
	
	// Error
	USR_MISMATCH("EL NOMBRE DE USUARIO NO COINCIDE CON EL VALOR ESPERADO"),
	PASS_MISMATCH("LA CONTRASEÑA NO COINCIDE CON EL VALOR ESPERADO"),
	PRODUCTS_TXT_NOT_VISIBLE("EL TEXTO 'PRODUCTOS' NO ES VISIBLE"),
	HANDLE_ASSERTION_ERROR("CONTROLANDO EXCEPCIONES"),
	TEST_ERROR("PRUEBA FALLIDA"),
	LOGIN_BTN_NOT_VISIBLE("EL BOTÓN 'LOGIN' NO ES VISIBLE"),
	REMOVE_BTN_NOT_VISIBLE("EL BOTÓN 'REMOVER' NO ES VISIBLE"),
	PRODUCT_NAME_MISMATCH("EL NOMBRE DEL PRODUCTO NO COINCIDE CON EL VALOR ESPERADO"),
	
	// Login
	LOGIN("INICIANDO LOGIN"),
	LOGIN_COMPLETED("LOGIN COMPLETADO"),
	VALIDATE_LOGIN("VALIDANDO LOGIN"),
	LOGIN_BTN_SAVED("BOTÓN DE LOGIN ALMACENADO"),
	LOGIN_BTN_VISIBLE("EL BOTÓN DE LOGIN ES VISIBLE"),
	LOGIN_OK("LOGIN EXITOSO"),
	
	// Cart
	CART("INICIANDO CARRITO"),
	CART_COMPLETED("CARRITO COMPLETADO"),
	VALIDATE_CART("VALIDANDO CARRITO"),
	CART_OK("CARRITO EXITOSO");
	
	
	/*** VARIABLES ***/
	private final String message;
	
	/*** METHODS ***/
	// Setter
	Messages(String message){
		this.message = message;
		
	}
	
	// Getter
	public String getMessage() {
		return message;
		
	}
}
